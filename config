# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.
include ./apps.conf
include ./vars.conf
include ./visual-vars.conf
include ./advanced-vars.conf

output * bg $wallpaper fill

seat seat0 xcursor_theme $cursorTheme $cursorSize

input type:keyboard {
    xkb_layout "gb"
    xkb_options "caps:escape"
    repeat_delay "250"
    repeat_rate "25"
}

### Key bindings
#
# Basics:
#
# Start a terminal
bindsym $terminalOpen exec $term
# Kill focused window
bindsym $killWindow kill
# Start your launcher
bindsym $appLauncherOpen exec $menu
# Start your web browser
bindsym $webBrowserOpen exec $webBrowser
# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal
# Reload the configuration file
bindsym $reloadConfig reload
# Exit sway (logs you out of your Wayland session)
bindsym $exitSway exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'
bindsym $powerOff exec poweroff

#
# Moving around:
#
# Move your focus around
bindsym $focusLeft focus left
bindsym $focusDown focus down
bindsym $focusUp focus up
bindsym $focusRight focus right
# Move the focused window with the same, but add Shift
bindsym $moveLeft move left
bindsym $moveDown move down
bindsym $moveUp move up
bindsym $moveRight move right

#
# Workspaces:
#
# Switch to workspace
bindsym $openWorkspace1 workspace number 1
bindsym $openWorkspace2 workspace number 2
bindsym $openWorkspace3 workspace number 3
bindsym $openWorkspace4 workspace number 4
bindsym $openWorkspace5 workspace number 5
bindsym $openWorkspace6 workspace number 6
bindsym $openWorkspace7 workspace number 7
bindsym $openWorkspace8 workspace number 8
bindsym $openWorkspace9 workspace number 9
bindsym $openWorkspace10 workspace number 10
# Move focused container to workspace
bindsym $moveToWorkspace1 move container to workspace number 1
bindsym $moveToWorkspace2 move container to workspace number 2
bindsym $moveToWorkspace3 move container to workspace number 3
bindsym $moveToWorkspace4 move container to workspace number 4
bindsym $moveToWorkspace5 move container to workspace number 5
bindsym $moveToWorkspace6 move container to workspace number 6
bindsym $moveToWorkspace7 move container to workspace number 7
bindsym $moveToWorkspace8 move container to workspace number 8
bindsym $moveToWorkspace9 move container to workspace number 9
bindsym $moveToWorkspace10 move container to workspace number 10
# Note: workspaces can have any name you want, not just numbers.
# We just use 1-10 as the default.

#
# Layout stuff:
#
# You can "split" the current object of your focus with
# $mod+b or $mod+v, for horizontal and vertical splits
# respectively.
bindsym $splitHorizontal splith
bindsym $splitVertical splitv
# Switch the current container between different layout styles
bindsym $layoutStacking layout stacking
bindsym $layoutTabbed layout tabbed
bindsym $layoutToggleSplit layout toggle split
# Make the current focus fullscreen
bindsym $toggleFullscreen fullscreen
# Toggle the current focus between tiling and floating mode
bindsym $toggleFloating floating toggle
# Swap focus between the tiling area and the floating area
bindsym $focusModeToggle focus mode_toggle
# Move focus to the parent container
bindsym $focusParent focus parent

#
# Scratchpad:
#
# Sway has a "scratchpad", which is a bag of holding for windows.
# You can send windows there and get them back later.
# Move the currently focused window to the scratchpad
bindsym $moveToScratchpad move scratchpad
# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $showScratchpad scratchpad show

#
# Resizing containers:
#
mode "resize" {
# left will shrink the containers width
# right will grow the containers width
# up will shrink the containers height
# down will grow the containers height
        bindsym $left resize shrink width 10px
        bindsym $down resize grow height 10px
        bindsym $up resize shrink height 10px
        bindsym $right resize grow width 10px
# Return to default mode
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $resizeMode mode "resize"

#
# Utilities:
#
# Special keys to adjust volume via PulseAudio
bindsym --locked $volumeMute exec pactl set-sink-mute \@DEFAULT_SINK@ toggle
bindsym --locked $volumeDown exec pactl set-sink-volume \@DEFAULT_SINK@ -5%
bindsym --locked $volumeUp exec pactl set-sink-volume \@DEFAULT_SINK@ +5%
bindsym --locked $micMute exec pactl set-source-mute \@DEFAULT_SOURCE@ toggle
# Special keys to adjust brightness via brightnessctl
bindsym --locked $brightnessDown exec brightnessctl set 5%-
bindsym --locked $brightnessUp exec brightnessctl set 5%+
# Special key to take a screenshot with grim
bindsym $screenshot exec grim

#
# Status Bar:
#
exec $barCommand

#
# Title Bar:
#
# Read `man 5 sway` for more information about this section
font $font
title_align center

#
# Border
#
# Read `man 5 sway` for more information about this section
hide_edge_borders $edgeBorders

include /etc/sway/config.d/*
